<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PDF Printer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LayoutTemplateWebApp.styles.css" asp-append-version="true" />
    <link rel="decreaseIcon" href="C:\Users\kenda\OneDrive\Documentos\GitHub\PDF_Printer\LayoutTemplateWebApp\wwwroot\lib\bootstrap-icons\font\fonts\font-size-decrease-icon.png" type="image/x-icon">
    <link rel="increaseIcon" href="C:\Users\kenda\OneDrive\Documentos\GitHub\PDF_Printer\LayoutTemplateWebApp\wwwroot\lib\bootstrap-icons\font\fonts\font-size-increase-icon.png" type="image/x-icon">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-colorMainTrans">
            <div class="container-fluid align-middle">
                <div class="align-middle">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        @* //This could be the link to the inicial app page *@
                        <i class="bi bi-mortarboard-fill"></i>
                        PDF Printer
                    </a>
                </div>
               
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    @{
                        var option1IsActive = Context.Request.Path.Value.Contains("/Inicio");
                        var option2IsActive = Context.Request.Path.Value.Contains("/Datos");
                        var option3IsActive = Context.Request.Path.Value.Contains("/Acerca de");
                    }

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(option1IsActive ? "active" : "")" asp-area="" asp-page="/Inicio">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(option2IsActive ? "active" : "")" asp-area="" asp-page="/Datos">Datos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(option3IsActive ? "active" : "")" asp-area="" asp-page="/Acerca de">Acerca de</a>
                        </li>
                    </ul>
                </div>
                <div class="text-center align-middle text-black mx-1">
                    <!-- Interactive icons represented as buttons -->
                    <button id="highContras" class="icon-button bi bi-brightness-high-fill" aria-label="Alto constraste" style="cursor: pointer;" onclick="applyHighContrast()">
                    </button>
                    <button id="zoom-icon" class="icon-button bi bi-zoom-in" aria-label="Aumentar Tamaño de letra" style="cursor: pointer;" onclick="zoomIn()">
                    </button>
                    <button id="zoom-icon" class="icon-button bi bi-zoom-out" aria-label="Disminuir Tamaño de letra" style="cursor: pointer;" onclick="zoomOut()">
                    </button>

                </div>

                <button class="icon-Profile bg-footer text-center align-middle fs-3 text-white btn d-flex justify-content-center mr-2">
                    <i class="bi bi-person"></i>
                </button>



            </div>
        </nav>
    </header>


    <div class="page d-flex flex-row bg-grayContrast">
        <aside class="site-bar bg-white">
            <ul class="d-flex flex-column gap-3 px-0 py-2">
                <li class="aside-link">
                    <i class="bi bi-people-fill"></i>
                    Importar Archivos
                </li>
                <li class="aside-link">
                    <i class="bi bi-people-fill"></i>
                    Importar Carpetas
                </li>
                <li class="aside-link">
                    <i class="bi bi-people-fill"></i>
                    Ajustes de Impresión
                </li>
                <li class="aside-link">
                    <i class="bi bi-people-fill"></i>
                    Imprimir Colan
                </li>
            </ul>

        </aside>
        <div class="content-page w-100">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>


    <footer class="border-top footer text-muted ">
        <div class="container">
            Correo: example@itcr.ac.cr Teléfono: 2020-2020 
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

  
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>